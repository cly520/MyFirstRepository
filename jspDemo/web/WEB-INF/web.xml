<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
    <!--登录请求的servlet-->
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>servlet.UserLoginServlet</servlet-class>
    </servlet>
    <!--退出请求的servlet-->
    <servlet>
        <servlet-name>UserExistServlet</servlet-name>
        <servlet-class>servlet.UserExistServlet</servlet-class>
    </servlet>
    <!--添加请求的servlet-->
    <servlet>
        <servlet-name>EmpAddServlet</servlet-name>
        <servlet-class>servlet.EmpAddServlet</servlet-class>
    </servlet>
    <!--遍历请求的servlet-->
    <servlet>
        <servlet-name>EmpListServlet</servlet-name>
        <servlet-class>servlet.EmpListServlet</servlet-class>
    </servlet>
    <!--修改请求的servlet-->
    <servlet>
        <servlet-name>EmpUpdateServlet</servlet-name>
        <servlet-class>servlet.EmpUpdateServlet</servlet-class>
    </servlet>
    <!--注册请求的servlet-->
    <servlet>
        <servlet-name>userRegisterServlet</servlet-name>
        <servlet-class>servlet.UserRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpDeleteServlet</servlet-name>
        <servlet-class>servlet.EmpDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DistrictListServlet</servlet-name>
        <servlet-class>servlet.DistrictListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LouDongListServlet</servlet-name>
        <servlet-class>servlet.LouDongListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BaoXiuAddServlet</servlet-name>
        <servlet-class>servlet.BaoXiuAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BaoXiuListServlet</servlet-name>
        <servlet-class>servlet.BaoXiuListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BaoXiuListServlet</servlet-name>
        <url-pattern>/baoXiuListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BaoXiuAddServlet</servlet-name>
        <url-pattern>/baoXiuAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LouDongListServlet</servlet-name>
        <url-pattern>/louDongListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DistrictListServlet</servlet-name>
        <url-pattern>/districtListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpDeleteServlet</servlet-name>
        <url-pattern>/empDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userRegisterServlet</servlet-name>
        <url-pattern>/userRegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpUpdateServlet</servlet-name>
        <url-pattern>/empUpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpListServlet</servlet-name>
        <url-pattern>/empListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpAddServlet</servlet-name>
        <url-pattern>/empAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserExistServlet</servlet-name>
        <url-pattern>/userExistServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/userLoginServlet</url-pattern>
    </servlet-mapping>
    <!--配置中文乱码的过滤器-->
    <filter>
        <filter-name>GenericEncodingFilter</filter-name>
        <filter-class>filter.GenericEncodingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GenericEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>